{% extends "/base/base.twig" %}


{% block title %}TreeStory - Compte{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/assets/css/account.css">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/assets/scripts/dropdownScript.js"></script>
    <script type="text/javascript" src="/assets/scripts/follow.js"></script>
{% endblock %}


{% block body %}
    <div class="user">
        <div id="avatar">
            <img src="{{ userAvatar }}" alt="Photo de profil">
        </div>
        <div id="userName">
            {{ userName }}
        </div>
    </div>
    {% if userNameConnected != userName %}
        <div class="follow">
            <button user-id ="{{userName}}" class="follow-button">{{buttonName}}</button>
        </div>
    {% endif %}

    <div class="statsFollows">
        <div id="statFollowers">
            <div id="valueFollowers">
                {{ follower }}
            </div>
            <h2>Abonn√©s</h2>
        </div>
        <div id="statFollowings">
            <div id="valueFollowings">
                {{ following }}
            </div>
            <h2>Abonnements</h2>
        </div>
    </div>

    <div id="biographie">
        <h1>Biographie</h1>
        <div id="textBiographie">
            {{ biographie }}
        </div>
    </div>

    <div class="stats">
        <div id="statFavori">
            <h2>Favori</h2>
            <div id="valueFavori">
                {{ like }}
            </div>
        </div>
    </div>
    
    <div class="option">
    {% if userNameConnected == userName %}
        <div class="modifStory">
            <div class="modifStoryTitle">
                <h1>Modifier vos histoires</h1>
                <i class="fas fa-chevron-down"></i>
            </div>
            <div class="modifStoryContent close">
                {% for chapter in stories %}
                    {% include '/base/infoStoryNode.twig' %}
                {% endfor %}
            </div>
        </div>
        <div class="modifAccount">
            <a href="/configProfil">Modification du profil</a>
        </div>
    {% endif %}
    </div>
{% endblock %}