<div class="storyContent">
	<a href="/story/{{favoriteStory.StoryNodeSource|e}}/show">
		<img src="{{ favoriteStory.StoryCover|e }}">
	</a>
	<div class="infoStory">

		<a href="/story/chapter/{{ favoriteStory.StoryNodeId|e }}/read">
			<h1>{{ favoriteStory.StoryNodeTitle|e }}</h1>
		</a>
		
		{% if userNameConnected == userAccountName %}
			<div class="modifChapter">
				<a href="/story/chapter/{{favoriteStory.StoryNodeId|e}}/edit">
					<button class="modif-button">Modifier</button>
				</a>
			</div>
		{% else %}
			<p class="author">Par <a href="/user/{{ favoriteStory.StoryNodeAuthor|e }}">{{ favoriteStory.StoryNodeAuthor|e }} </a> </p>
		{% endif %}

		<div class="text"> 
			<p> {{ favoriteStory.StoryNodeText|e }} </p>
		</div>

		<div class="storyType">
			{% for tag in favoriteStory.StoryTag|e %}
					<label class="type-label"> {{ tag[0] }} </label>
			{% endfor %}
		</div>

		<div class="likes">
			<i class="fa-solid fa-thumbs-up fa-xl"></i>
			<p>| {{ favoriteStory.StoryNodeLikes|e }}</p>
		</div>
		
	</div>
</div>

