{% extends "./base/base.twig" %}

{% block title %}TreeStory - Modification Profil{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="./assets/css/modificationProfil.css">
{% endblock %}


{% block body %}
<div class="form-modification">
    <div class="modification-card-form">
        <form method="post" action="index.php?path=/modification">
            <input type="text" name="modif_userName"     id="modif_userName" placeholder="Choisissez un nouvel identifiant"   autocomplete="off">
            <input type="password" name="modif_password" id="modif_password" placeholder="Choisissez un nouveau mot de passe" autocomplete="off">
            <input type="text" name="modif_mail"         id="modif_mail"     placeholder="Choisissez un nouvel E-mail"        autocomplete="off">

            <input type="file" name="modif_Avatar" id = "modif_Avatar">

            <button type="submit" class="modif-button" name="modif-button" id="modif-button">Enregistrer les modifications</button>
        </form>
    </div>

    {% if messageErreur is defined and messageErreur is not empty %}
        <p class="erreur"><i class="fas fa-info-circle"></i> <span>{{ messageErreur }}</span></p>
    {% endif %}

</div>
{% endblock %}

